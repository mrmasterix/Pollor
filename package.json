{
    "name": "pollor",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "cache": "npm cache clean --force",
        "start": "./node_modules/.bin/npm-run-all clean -p webpack server",
        "start:open": "npm run open && npm run start",
        "open": "start http://127.0.0.1:9000/",
        "clean": "./node_modules/.bin/rimraf www",
        "clean:all": "cordova platform rm android && npm run clean:www:platform",
        "clean:www:platform": "./node_modules/.bin/rimraf www platforms",
        "clean:test": "./node_modules/.bin/rimraf www",
        "webpack": "./node_modules/.bin/webpack --watch --config ./webpack.dev.cfg.js",
        "build": "./node_modules/.bin/webpack --config ./webpack.platform.cfg.js",
        "server": "node server",
        "lint": "./node_modules/.bin/eslint ./js/**/*.js ./js/**/*.jsx",
        "lint:fix": "./node_modules/.bin/eslint --fix ./js/**/*.js ./js/**/*.jsx",
        "jest": "./node_modules/.bin/jest --coverage ./test/**/*.test.js",
        "test": "./node_modules/.bin/npm-run-all clean:test jest",
        "android": "cordova platform add android",
        "device": "cordova run --device --noprepare",
        "deploy": "./node_modules/.bin/npm-run-all clean cache build android build device"
    },
